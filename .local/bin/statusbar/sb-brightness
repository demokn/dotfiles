#!/bin/sh

# Prints the current brightness.

brightness() {
    for bl in /sys/class/backlight/*; do
        [ -d "$bl" ] || return 1
        read -r cur <"$bl/brightness"
        read -r max <"$bl/max_brightness"
        per="$((cur * 100 / max))"
    done

    echo $per
}

#bright="$(brightness)"
bright="$(xbacklight -get)"

case $BUTTON in
    1)
        ;;
    3)
        notify-send "ðŸ”† Brightness module" "\- Shows current brightness level."
        ;;
    6)
        setsid -f "$TERMINAL" -e "$EDITOR" "$0"
        ;;
esac

echo "ðŸ”†$bright%"
